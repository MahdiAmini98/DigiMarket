@model DigiMarket.Application.Services.Orders.Site.Queries.GetOrderDetail.GetOrderDetail

@{
    ViewData["Title"] = "OrderDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int sum;
}

<div class="container-main">
    <div class="d-block">
        <section class="profile-home">
            <div class="col-lg">
                <div class="post-item-profile order-1 d-block">
                    <partial name="PartialView/_SliderBar"/>
                    <div class="col-lg-9 col-md-9 col-xs-12 pl">
                        <div class="profile-content">
                            <div class="profile-stats">
                                <div class="table-order-view">
                                    <h2 class="order-view-title mt-4 mb-3">جزییات سفارش </h2>
                                    <table class="table table-borderless">
                                        <thead>
                                            <tr>
                                                <th scope="col">نام محصول</th>
                                                <th scope="col">تعداد محصول</th>
                                                <th scope="col">قیمت محصول</th>
                                                <th scope="row">مجموع:</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                          @foreach (var item in Model.OrderDetail)
                                          {
                                              <tr>
                                                  <td class="product-name">@item.productName</td>
                                                  <td class="product-total">
                                                      <span class="count">
                                                        
                                                          @item.Count
                                                      </span>
                                                  </td>
                                                  <td class="product-total">
                                                      <span class="amount">
                                                          <span>تومان</span>
                                                          @item.Price.ToString("n0")
                                                      </span>
                                                  </td>
                                                  <td>
                                                      <span class="amount">
                                                          <span>تومان</span>
                                                          @{
                                                              sum = item.Count * item.Price;

                                                          }
                                                          @sum.ToString("n0")

                                                     </span>
                                                  </td>
                                              </tr>
                                          }
                                        </tbody>
                                        <tfoot>
                                         
                                            <tr>
                                                <th scope="row">حمل و نقل:</th>
                                                <td>حمل و نقل رایگان</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">روش پرداخت:</th>
                                                <td>انتقال مستقیم بانکی</td>
                                            </tr>
                                            <tr>
                                             
                                               
                                                   <th scope="row">تعداد محصول</th>
                                                <td>
                                                    @Model.OrderDetail.Sum(p=>p.Count)
                                                </td>
                                            
                                            </tr>
                                            <tr>
                                                <th scope="row">قیمت نهایی:</th>
                                                <td>
                                                    <span class="amount">
                                                        <span>تومان</span>
                                                 
                                               @Model.Amount.ToString("n0")
                                                    </span>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    <br>
                                    <br>
                                    <div class="order-view-customer">
                                        <div class="box-header">
                                            <span class="box-title">نشانی ما</span>
                                        </div>
                                        <div class="profile-address-item">
                                            <div class="profile-address-content">
                                                <ul class="profile-address-info">
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <span class="title-address">آدرس : </span>
                                                            خراسان شمالی، بجنورد
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <span class="title-address">ایمیل : </span>
                                                            info@digismart.com
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <span class="title-address">شماره تلفن : </span>
                                                            0991*******
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <span class="title-address">کد پستی : </span>
                                                            945789651235
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
