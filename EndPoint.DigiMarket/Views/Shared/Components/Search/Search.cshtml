@model List<DigiMarket.Application.Services.Common.Site.Queries.GetCategoryForSearch.CategoryItemForSearchDto>
@{
    Layout = null;
}

<form asp-controller="product" asp-action="index"  class="form-search" method="get">
    <input type="search" class="header-search-input" name="searchKey" placeholder="نام کالا، برند و یا دسته مورد نظر خود را جستجو کنید…">
    <div class="action-btns">
        <button class="btn btn-search" type="submit">
            <i class="fa fa-search"></i>
        </button>
        <div class="search-filter">
            <div class="form-ui">
                <div class="custom-select-ui">
                    <select class="right" name="catId" asp-items="@(new SelectList(Model,"CategoryId","CategoryName"))">
                        <option>همه دسته ها</option>
                       
                    </select>
                </div>
            </div>
        </div>
    </div>
</form>