@using DigiMarket.Common.Convertor
@using DigiMarket.Common.EnumHelpers
@using DigiMarket.Domain.Entities.Orders
@model List<DigiMarket.Application.Services.Orders.PanelAdmin.Queries.GetOrdersForAdmin.OrdersAdminDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section id="shopping-cart">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-warning">
                        <h4 class="card-title">خلاصه فاکتور</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block">
                        <div class="table-responsive">
                            <table id="recent-orders" class="table table-hover table-xl mb-0">
                                <thead>
                                    <tr>
                                        <th class="border-top-0">وضعیت</th>
                                        <th class="border-top-0">شماره فاکتور</th>
                                        <th class="border-top-0">نام مشتری</th>
                                        <th class="border-top-0">شماره پرداخت </th>
                                        <th class="border-top-0">تاریخ ثبت</th>
                                        <th class="border-top-0">تعداد محصولات</th>
                                        <th class="border-top-0">قیمت کل:</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-truncate">
                                                @if (item.OrderState == OrderState.Canceled)
                                                {
                                                    <i class="fa fa-dot-circle-o danger font-medium-1 mr-1"></i>
                                                }
                                                @if (item.OrderState == OrderState.Processing)
                                                {
                                                    <i class="fa fa-dot-circle-o warning font-medium-1 mr-1"></i>
                                                }
                                                @if (item.OrderState == OrderState.Delivered)
                                                {
                                                    <i class="fa fa-dot-circle-o success font-medium-1 mr-1"></i>
                                                }

                                                @{
                                                    var state = EnumHelpers<OrderState>.GetDisplayValue(item.OrderState);
                                                }

                                                @state
                                            </td>
                                            <td class="text-truncate"><a href="#">@item.orderId</a></td>
                                            <td class="text-truncate">
                                                <span class="avatar avatar-xs">
                                                    <img class="box-shadow-2" src="/AdminTemplate/app-assets/img/portrait/small/avatar-s-5.jpg" alt="avatar">
                                                </span>
                                                <span>@item.UserName</span>
                                            </td>
                                            <td class="text-truncate"><a href="#">@item.RequestId</a></td>

                                            <td class="text-truncate"><a href="#">@item.InsertTime.ToShamsi()</a></td>

                                            <td class="text-truncate"><a href="#">@item.ProductCount</a></td>

                                            <td class="text-truncate">@item.Amount.ToString("n0") تومان</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div> 
            </div>
        </div>
    </div>
</section>
